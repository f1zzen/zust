{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zust",
  "version": "../package.json",
  "identifier": "com.f1zzen.zust",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Zust",
        "width": 600,
        "height": 600,
        "minHeight": 500,
        "minWidth": 400,
        "transparent": true,
        "decorations": false,
        "visible": false,
        "devtools": true
      },
      {
        "label": "splash",
        "url": "splash.html",
        "width": 320,
        "height": 450,
        "decorations": false,
        "center": true,
        "resizable": false,
        "backgroundColor": "#0A0A0A"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "./zapret/**/*"
    ],
    "active": true,
    "targets": [
      "nsis"
    ],
    "windows": {
      "nsis": {
        "sidebarImage": "../assets/installer_header.bmp",
        "headerImage": "../assets/installer_sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "languages": [
          "Russian"
        ]
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}